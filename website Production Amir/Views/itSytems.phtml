<!-- livenews.phtml -->
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Morson Group - Live News</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=iso-8859-2" http-equiv="Content-Type">
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #343a40; /* Dark background color */
            color: #ffc107; /* Text color for news section */
            padding: 20px;
            text-align: center;
        }
    </style>
</head>

<body>

<h2 class="text-center mt-3">Live Company News</h2>

<div>
    <!-- Your live news content and update logic goes here -->
    <p id="liveNewsContent">This is your live news content...</p>
</div>

<!-- Include Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    // Implement your live news update logic here
    function updateLiveNews() {
        // Example: Fetch live news content from server
        // and update the #liveNewsContent element
        document.getElementById('liveNewsContent').innerHTML = 'New live news content...';
    }

    // Update live news every 30 seconds
    setInterval(updateLiveNews, 30000);
</script>

</body>

</html>
